<!doctype html>
<html lang="ar" dir="ltr">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="css/bootstrap.min.css">
	 <title>vistup</title>

 
   <style>
    .video-container {
      position: relative;
      width: 100%;
      max-width: 400px;
      height: 400px;
      border-radius: 15px;
      overflow: hidden;
      margin: 10px; /* Расстояние между видео */
    }

    .video-container video {
      width: 100%;
      height: 80%;
      object-fit: cover;
      border-radius: 15px;
    }

    .video-caption {
      text-align: center;
      font-weight: bold;
	    font-size: 16px; 
      color: #333; 
    }

    .video-title {
      text-align: center;
      margin-bottom: 10px;
      font-weight: bold;
      font-size: 24px;
	   
      text-transform: uppercase; 
    }
  </style>
</head>
<body>

<div class="container">
  <div class="video-title">
  <br>
    Фанками мемеберів
  </div>
  <div class="row justify-content-center">
    <div class="col-12 col-md-2">
      <div class="video-container">
        <video src="фанкамсубин.mp4" controls></video>
        <div class="video-caption">
         Субін
        </div>
      </div>
    </div>
    <div class="col-12 col-md-2">
      <div class="video-container">
        <video src="фанкаменджун.mp4" controls></video>
        <div class="video-caption">
          Йонджун
        </div>
      </div>
    </div>
    <div class="col-12 col-md-2">
      <div class="video-container">
        <video src="фанкамбомгю.mp4" controls></video>
        <div class="video-caption">
          Бомгю
        </div>
      </div>
    </div>
    <div class="col-12 col-md-2">
      <div class="video-container">
        <video src="фанкамтэхен.mp4" controls></video>
        <div class="video-caption">
         Техьон
        </div>
      </div>
    </div>
    <div class="col-12 col-md-2">
      <div class="video-container">
        <video src="фанкамкай.mp4" controls></video>
        <div class="video-caption">
          Хюнін Кай
        </div>
      </div>
    </div>
	
  </div>
</div>

<div class="container">
  <div class="row justify-content-center">
    <div class="video-title">
      Артист
    </div>
  </div>
  <div class="container">
  <div class="row justify-content-center">
    <div class="col-16 col-md-10">
      <div class="row">
        <div class="col-6">
          <div class="video-container" style="max-width: 500px;">
            <video src="енджунартистмесяца.mp4" controls style="width: 100%; height: 100%;"></video>
            <div class="video-caption">
              Йонджун
            </div>
          </div>
        </div>
        <div class="col-6">
          <div class="video-container" style="max-width: 500px;"> 
            <video src="хюкаиенджун.mp4" controls style="width: 100%; height: 100%;"></video>
            <div class="video-caption">
              Йонджун та Кай
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<br><br>
<div class="container">
  <div class="row justify-content-center">
    <div class="video-title">
      Улюблені кавери
    </div>
  </div>
  <div class="container">
  <div class="row justify-content-center">
    <div class="col-16 col-md-10">
      <div class="row">
        <div class="col-6">
          <div class="video-container" style="max-width: 500px;">
            <video src="каверенблад.mp4" controls style="width: 100%; height: 100%;"></video>
            <div class="video-caption">
              Йонджун
            </div>
          </div>
        </div>
        <div class="col-6">
          <div class="video-container" style="max-width: 500px;"> 
            <video src="кавердинамит.mp4" controls style="width: 100%; height: 100%;"></video>
            <div class="video-caption">
              Йонджун та Кай
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>


</body>
</html>